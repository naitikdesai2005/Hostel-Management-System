<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Menu</title>
    <!-- Add any CSS styling if needed -->
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Food Menu</h1>
    <table>
        <tr>
            <th>Day</th>
            <th>Breakfast</th>
            <th>Lunch</th>
            <th>Dinner</th>
            <th>Action</th>
        </tr>
        <% foodMenu.forEach(item => { %>
            <tr>
                <td><%= item.day %></td>
                <td><%= item.breakfast %></td>
                <td><%= item.lunch %></td>
                <td><%= item.dinner %></td>
                <td><a href="/admin/food-menu/update/<%= item._id %>">Update</a></td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
