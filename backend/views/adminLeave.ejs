<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Leaves</title>
</head>
<body>
  <h1>Admin Leaves</h1>
  <ul>
    <% leaves.forEach(leave => { %>
      <li>
        <p>Student Name: <%= leave.studentName %></p>
        <p>Room Number: <%= leave.roomNo %></p>
        <p>Start Date: <%= leave.startDate %></p>
        <p>End Date: <%= leave.endDate %></p>
        <p>Reason: <%= leave.reason %></p>
        <p>Place: <%= leave.place %></p>
        <p>Status: <%= leave.status %></p>
        <% if (leave.status === 'pending') { %>
          <form action="/admin/leave-requests/<%= leave._id %>/approve" method="post">
            <button type="submit">Accept</button>
          </form>
          <form action="/admin/leave-requests/<%= leave._id %>/reject" method="post">
            <button type="submit">Reject</button>
          </form>
        <% } %>
      </li>
    <% }) %>
  </ul>
</body>
</html>
